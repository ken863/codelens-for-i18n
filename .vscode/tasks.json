{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "clear": false
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "reveal": "never",
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": [
                        "relative",
                        "${workspaceRoot}"
                    ],
                    "pattern": "$tsc-watch",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "(\\s+|^)tsc(\\s+|$)"
                        },
                        "endsPattern": {
                            "regexp": "(?:Compilation complete|Found \\d+ errors?)"
                        }
                    }
                }
            ]
        },
        {
            "type": "npm",
            "script": "lint",
            "group": "test",
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "clear": false
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "package extension",
            "type": "shell",
            "command": "vsce",
            "args": [
                "package"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "always",
                "clear": false
            }
        }
    ]
}
