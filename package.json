{
  "name": "codelens-i18n",
  "displayName": "CodeLens for i18n",
  "description": "VS Code extension hỗ trợ tìm kiếm và chỉnh sửa các chuỗi i18n trực tiếp trong code",
  "version": "1.1.2",
  "publisher": "lampt-dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ken863/codelens-for-i18n"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "codelens",
    "localization",
    "unused",
    "cleanup",
    "analysis"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "title": "Enable Codelens for i18n",
        "command": "codelens-i18n.enableCodeLens",
        "category": "CodeLens for i18n"
      },
      {
        "title": "Disable Codelens for i18n",
        "command": "codelens-i18n.disableCodeLens",
        "category": "CodeLens for i18n"
      },
      {
        "title": "Setting i18n folder",
        "command": "codelens-i18n.openI18nFolderSetting",
        "category": "CodeLens for i18n"
      },
      {
        "title": "Setting display language",
        "command": "codelens-i18n.openDisplayLanguageSetting",
        "category": "CodeLens for i18n"
      },
      {
        "title": "Add to i18n folders",
        "command": "codelens-i18n.addToI18nFolders",
        "category": "CodeLens for i18n"
      },
      {
        "title": "Find unused i18n resources",
        "command": "codelens-i18n.findUnusedResources",
        "category": "CodeLens for i18n",
        "icon": "$(search)"
      },
      {
        "title": "Refresh CodeLens",
        "command": "codelens-i18n.refreshCodeLens",
        "category": "CodeLens for i18n",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "codelens-i18n.addToI18nFolders",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "codelens-i18n.enableCodeLens"
        },
        {
          "command": "codelens-i18n.disableCodeLens"
        },
        {
          "command": "codelens-i18n.openI18nFolderSetting"
        },
        {
          "command": "codelens-i18n.openDisplayLanguageSetting"
        },
        {
          "command": "codelens-i18n.findUnusedResources"
        },
        {
          "command": "codelens-i18n.refreshCodeLens"
        }
      ],
      "editor/title": [
        {
          "command": "codelens-i18n.findUnusedResources",
          "when": "resourceExtname == .json",
          "group": "navigation@1"
        },
        {
          "command": "codelens-i18n.refreshCodeLens",
          "when": "editorLangId",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "properties": {
        "codelens-i18n.enableCodeLens": {
          "type": "boolean",
          "default": true
        },
        "codelens-i18n.i18nFolder": {
          "type": "array",
          "default": ["i18n"],
          "description": "Danh sách thư mục chứa các file i18n (tương đối với workspace root).",
          "items": {
            "type": "string"
          }
        },
        "codelens-i18n.displayLanguage": {
          "type": "string",
          "default": "ja",
          "description": "Ngôn ngữ mặc định hiển thị trong CodeLens title.",
          "enum": [
            "ja",
            "en"
          ]
        },
        "codelens-i18n.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**", 
            "**/.git/**", 
            "**/dist/**", 
            "**/build/**",
            "**/coverage/**",
            "**/.next/**",
            "**/.nuxt/**",
            "**/out/**",
            "**/public/**",
            "**/assets/**",
            "**/.vscode/**",
            "**/.idea/**",
            "**/tmp/**",
            "**/temp/**",
            "**/*.min.js",
            "**/*.min.css",
            "**/vendor/**",
            "**/lib/**",
            "**/libs/**"
          ],
          "description": "Các pattern file/folder sẽ bị loại trừ khi tìm kiếm unused resources.",
          "items": {
            "type": "string"
          }
        },
        "codelens-i18n.includeFileExtensions": {
          "type": "array",
          "default": ["ts", "js", "tsx", "jsx", "vue", "html", "php", "py", "java", "cs", "cpp", "c"],
          "description": "Các extension file sẽ được scan để tìm kiếm i18n keys.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20",
    "@types/vscode": "^1.102.0",
    "eslint": "^9.13.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
